<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?bgcolor">

    <ImageView
        android:id="@+id/ImgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btpitlogo300"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/RepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="?bgcolor"
        android:text="3"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgRepst"
        app:layout_constraintTop_toBottomOf="@+id/TxtPost"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:contentDescription="@string/Str"
        android:src="@drawable/icons8_eye_24"
        app:layout_constraintEnd_toStartOf="@+id/ViewCount"
        app:layout_constraintTop_toBottomOf="@+id/TxtPost"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TxtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:text="11 февраля в 20:23"
        android:textColor="#757575"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/ImgLogo"
        app:layout_constraintStart_toEndOf="@id/ImgLogo" />

    <ImageButton
        android:id="@+id/imgRepst"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="?bgcolor"
        android:contentDescription="@string/Str"
        android:src="@drawable/icons8_share_24"
        app:layout_constraintStart_toEndOf="@+id/LikesCount"
        app:layout_constraintTop_toBottomOf="@+id/TxtPost"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TxtPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:background="?bgcolor"
        android:text="mms"
        android:textColor="#757575"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ImgLogo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="19dp"
        android:autoLink="web"
        android:text="https://7oom.ru/sochinenya/sochinenie-na-temu-priroda.htm"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/LikesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:text="23"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgLikes"
        app:layout_constraintTop_toBottomOf="@+id/TxtPost"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imgLikes"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"

        android:src="@drawable/like_press"
        app:layout_constraintTop_toBottomOf="@+id/TxtPost"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
         />

    <TextView
        android:id="@+id/TxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="48dp"
        android:background="@color/white"
        android:text="БТПИТ"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/ImgLogo"
        app:layout_constraintStart_toEndOf="@id/ImgLogo" />

    <TextView
        android:id="@+id/ViewCount"
        android:layout_width="9dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:text="1k"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtPost"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/imgMenu"
        android:layout_width="21dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/TxtPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ImgLogo"
        app:srcCompat="@android:drawable/btn_dialog"
        tools:srcCompat="@drawable/icons8_dots_30" />


</androidx.constraintlayout.widget.ConstraintLayout>